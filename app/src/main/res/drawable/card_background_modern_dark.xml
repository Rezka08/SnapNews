<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main card background -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/card_background_elevated_dark"
                android:endColor="@color/card_background_dark"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border_dark" />
        </shape>
    </item>
    <!-- Glassmorphism overlay -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1AFFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>