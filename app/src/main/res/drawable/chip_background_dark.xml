<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_color_dark"
                        android:endColor="@color/accent_blue_dark"
                        android:angle="45" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
            <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#33FFFFFF"
                        android:endColor="#1AFFFFFF"
                        android:angle="90" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant_dark" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/outline_dark" />
        </shape>
    </item>
</selector>