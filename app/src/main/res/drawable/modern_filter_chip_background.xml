<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state dengan neon effect -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Glow effect -->
            <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#33FFFFFF" />
                    <corners android:radius="26dp" />
                </shape>
            </item>
            <!-- Main background -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_color_dark"
                        android:endColor="@color/accent_blue_dark"
                        android:angle="45" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Highlight overlay -->
            <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#26FFFFFF"
                        android:endColor="#13FFFFFF"
                        android:angle="90" />
                    <corners android:radius="23dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant_dark" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/outline_dark" />
        </shape>
    </item>
</selector>