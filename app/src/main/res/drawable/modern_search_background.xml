<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_shadow_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main background -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/surface_variant_dark"
                android:endColor="@color/card_background_dark"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border_dark" />
        </shape>
    </item>
    <!-- Glassmorphism overlay -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1AFFFFFF"
                android:endColor="#0DFFFFFF"
                android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
