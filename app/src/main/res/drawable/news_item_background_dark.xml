<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_color_dark">
    <item android:id="@android:id/background">
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/card_shadow_dark" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Main background -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/card_background_elevated_dark"
                        android:endColor="@color/surface_color_dark"
                        android:angle="135" />
                    <corners android:radius="20dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/outline_dark" />
                </shape>
            </item>
            <!-- Highlight overlay -->
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#26FFFFFF"
                        android:centerColor="#13FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="45" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>