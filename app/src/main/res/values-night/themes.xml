<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SnapNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Brand Colors - Enhanced for dark mode -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>

        <!-- Secondary Brand Colors - Warmer accents -->
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- Background Colors - Rich dark backgrounds -->
        <item name="android:colorBackground">@color/background_color_dark</item>
        <item name="colorSurface">@color/surface_color_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Surface Variants - Enhanced contrast -->
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Outline Colors - Subtle but visible -->
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorOutlineVariant">@color/outline_variant_dark</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_color_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>

        <!-- Status & Navigation Bars - Immersive dark -->
        <item name="android:statusBarColor">@color/background_color_dark</item>
        <item name="android:navigationBarColor">@color/surface_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Deprecated but still used -->
        <item name="colorPrimaryDark">@color/primary_variant_dark</item>
        <item name="colorAccent">@color/secondary_color_dark</item>
    </style>

    <style name="Theme.SnapNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- === ENHANCED CARD VIEW STYLES FOR DARK MODE === -->
    <style name="Widget.SnapNews.CardView.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_elevated_dark</item>
        <item name="cardElevation">12dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/glass_border_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardMaxElevation">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Widget.SnapNews.CardView.Filled" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/outline_dark</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- === ENHANCED BUTTON STYLES FOR DARK MODE === -->
    <style name="Widget.SnapNews.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/accent_blue_dark</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.SnapNews.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/primary_color_dark</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primary_color_dark</item>
    </style>

    <!-- === ENHANCED TEXT APPEARANCES FOR DARK MODE === -->
    <style name="TextAppearance.SnapNews.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.SnapNews.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.SnapNews.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.SnapNews.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/on_surface_variant_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- === ENHANCED PROGRESS BAR STYLES FOR DARK MODE === -->
    <style name="Widget.SnapNews.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary_color_dark</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Widget.SnapNews.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary_color_dark</item>
        <item name="android:progressBackgroundTint">@color/surface_variant_dark</item>
        <item name="android:indeterminateTint">@color/accent_blue_dark</item>
    </style>
</resources>