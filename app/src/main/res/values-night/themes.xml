<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SnapNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_color_dark</item>
        <item name="colorSurface">@color/surface_color_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Surface Variants -->
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorOutlineVariant">@color/outline_variant_dark</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_color_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/surface_color_dark</item>
        <item name="android:navigationBarColor">@color/surface_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Deprecated but still used -->
        <item name="colorPrimaryDark">@color/primary_variant_dark</item>
        <item name="colorAccent">@color/secondary_color_dark</item>
    </style>

    <style name="Theme.SnapNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>