<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SnapNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Surface Variants -->
        <item name="colorSurfaceVariant">@color/surface_variant_color</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Outline Colors -->
        <item name="colorOutline">@color/outline_color</item>
        <item name="colorOutlineVariant">@color/outline_variant_color</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/surface_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Deprecated but still used -->
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/secondary_color</item>
    </style>

    <style name="Theme.SnapNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- === CARD VIEW STYLES === -->
    <style name="Widget.SnapNews.CardView.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Widget.SnapNews.CardView.Filled" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>

    <!-- === BUTTON STYLES === -->
    <style name="Widget.SnapNews.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.SnapNews.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <!-- === TEXT APPEARANCE STYLES === -->
    <style name="TextAppearance.SnapNews.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.SnapNews.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.SnapNews.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SnapNews.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- === PROGRESS BAR STYLES === -->
    <style name="Widget.SnapNews.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Widget.SnapNews.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">?attr/colorPrimary</item>
        <item name="android:progressBackgroundTint">?attr/colorSurfaceVariant</item>
    </style>
</resources>